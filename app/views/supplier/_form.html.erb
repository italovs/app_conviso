<%= form_with(model: supplier) do |form| %>
  <% if @supplier.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control col-6' %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: 'form-control col-6' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control col-6' %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: 'form-control col-6'%>
  </div>

  <div class="actions ">
    <%= form.submit 'Criar novo fornecedor', :class=> "mb-2 btn btn-primary mr-2"%>
  </div>
<% end %>