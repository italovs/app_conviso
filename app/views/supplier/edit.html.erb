<h1>Editar fornecedor</h1>
<%= form_with url: supplier_update_path(@supplier), method: :put do |form| %>
  <% if @supplier.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control col-6', value: @supplier.name %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, class: 'form-control col-6', value: @supplier.category %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control col-6', value: @supplier.email %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: 'form-control col-6', value: @supplier.phone%>
  </div>

  <div class="actions ">
    <%= form.submit 'atualizar fornecedor', :class=> "mb-2 btn btn-primary mr-2"%>
  </div>
<% end %>

<%= link_to 'Show', supplier_show_path(@supplier) %> |
<%= link_to 'Back', suppliers_path %>
